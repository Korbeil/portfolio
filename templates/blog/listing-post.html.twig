{% if post.getType == 'link' %}
    {% set link = post.getUrl %}
    {% set target = ' target="_blank"' %}
{% else %}
    {% set link = path('blog_index') %}
    {% set target = '' %}
{% endif %}

<div class="row">
    <div class="col s12 m12">
        <div class="card">
            <div class="card-image">
                <a class="btn-floating halfway-fab waves-effect waves-light red" href="{{ link }}" {{ target | raw }}><i class="material-icons">link</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">{{ post.getTitle }}</span>
                {{ post.getSubtitle }}
            </div>
        </div>
    </div>
</div>
<section class="timeline">
    {% for event in events %}
        {% set type = event.getType %}
        <article class="timeline-element {{ type.getName }}">
            <div class="timeline-element-left">
                {{ event.getDateStart | date('M') }}
                <br/>
                {{ event.getDateStart | date('Y') }}
            </div>
            <div class="timeline-element-body card {{ type.getBackground }} {{ type.getText }}">
                <div class="card-content">
                    <span class="card-title">{{ event.getName }}</span>
                    {% if event.getDescription is not empty %}
                        <p>
                            {{ event.getDescription | raw }}
                        </p>
                    {% endif %}
                </div>
                {% if event.getTags is not empty %}
                    <div class="card-action left-align">
                        {% for tag in event.getTags %}
                            <div class="chip">{{ tag.getName }}</div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </article>
    {% endfor %}
</section>